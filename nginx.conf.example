server {
    listen 3000;
    server_name 69.62.99.34; # Replace with your domain or IP

    # Root directory for static files (Update this path to your actual project path)
    root /var/www/cash/dist;

    # Gzip Compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # Frontend Static Files
    location /projects/cash {
        alias /var/www/cash/dist;
        try_files $uri $uri/ /projects/cash/index.html;
        
        # Cache static assets
        expires 1y;
        add_header Cache-Control "public, no-transform";
    }

    # Backend API Proxy
    location /projects/cash/api {
        # Rewrite URL to remove the prefix before sending to backend
        rewrite ^/projects/cash/api/(.*) /api/$1 break;
        
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}
